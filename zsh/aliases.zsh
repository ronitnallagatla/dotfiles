# grep colors
alias grep='grep --color=auto'
alias egrep='grep -E --color=auto'
alias fgrep='fgrep --color=auto'

# ls 
alias ls='ls --color=auto'
alias ll='ls -lah'
alias la='ls -A'
alias l='ls'

# Protect against overwriting
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# Clear
alias c='clear'

